html
  head
    link(rel="stylesheet" href="/css/styles.css")
  body
    h1 Kim's Convenience
    h2= 'Season ' + season.number
    table
      tr
        th No
        th Title
        th Director
      for episode in season.episodes
        tr
          td= episode.number
          td= episode.title
          td= episode.director
          tr
          td(colspan=3)= episode.synopsis